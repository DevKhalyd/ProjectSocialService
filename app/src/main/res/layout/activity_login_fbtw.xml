<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.khalyd.projectsocialservice.Activities.LoginFBTW"
    android:weightSum="2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        >

        <ImageView
            android:id="@+id/facebook_login_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            />


        <com.facebook.login.widget.LoginButton
            android:id="@+id/loginbtn_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facebook_login_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />





</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="#03A9F4"
        >


        <ImageView
            android:id="@+id/twiter_login_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            />

        <Button
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/twiter_login_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="ENTRAR"

            />


    </RelativeLayout>


</LinearLayout>
